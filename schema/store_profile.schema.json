{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://example.com/schema/store_profile.schema.json",
  "title": "Store Profile",
  "type": "object",
  "required": ["store_id", "enseigne", "last_updated", "axes"],
  "properties": {
    "store_id": { "type": "string", "minLength": 3 },
    "enseigne": { "type": "string", "minLength": 1 },
    "store_name": { "type": "string" },
    "last_updated": { "type": "string", "format": "date-time" },
    "goal": { "type": "string", "enum": ["trafic_ct", "notoriete_lt", "hybride"] },
    "operation_type": { "type": "string" },
    "axes": {
      "type": "object",
      "required": ["adresse_contexte"],
      "properties": {
        "adresse_contexte": {
          "type": "object",
          "required": ["adresse_postale", "coordonnees"],
          "properties": {
            "adresse_postale": {
              "type": "object",
              "required": ["value", "sources"],
              "properties": {
                "value": { "type": "string", "minLength": 5 },
                "sources": {
                  "type": "array",
                  "minItems": 1,
                  "items": { "$ref": "#/$defs/source" }
                }
              },
              "additionalProperties": true
            },
            "coordonnees": {
              "type": "object",
              "required": ["latitude", "longitude"],
              "properties": {
                "latitude":  { "$ref": "#/$defs/valued_number" },
                "longitude": { "$ref": "#/$defs/valued_number" }
              },
              "additionalProperties": true
            },
            "references_ouvertes": {
              "type": "array",
              "items": {
                "type": "object",
                "required": ["page_type", "url", "source"],
                "properties": {
                  "page_type": { "type": "string" },
                  "title": { "type": "string" },
                  "language": { "type": "string" },
                  "url": { "type": "string", "format": "uri" },
                  "source": { "$ref": "#/$defs/source" },
                  "collected_at": { "type": "string", "format": "date-time" }
                },
                "additionalProperties": true
              }
            }
          },
          "additionalProperties": true
        }
      },
      "additionalProperties": true
    }
  },
  "additionalProperties": true,
  "$defs": {
    "source": {
      "type": "object",
      "required": ["type", "name", "url", "collected_at"],
      "properties": {
        "type": { "type": "string" },
        "name": { "type": "string" },
        "url": { "type": "string", "format": "uri" },
        "collected_at": { "type": "string", "format": "date-time" }
      },
      "additionalProperties": true
    },
    "valued_number": {
      "type": "object",
      "required": ["value", "sources"],
      "properties": {
        "value": { "type": "number" },
        "sources": {
          "type": "array",
          "minItems": 1,
          "items": { "$ref": "#/$defs/source" }
        }
      },
      "additionalProperties": true
    }
  }
}
